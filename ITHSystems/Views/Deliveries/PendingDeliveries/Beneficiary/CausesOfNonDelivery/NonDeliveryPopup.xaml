<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ITHSystems.Views.Deliveries.PendingDeliveries.Beneficiary.CausesOfNonDelivery.NonDeliveryPopup"
             BackgroundColor="Transparent"
             Margin="0"
             Padding="0"
             WidthRequest="360"
                CanBeDismissedByTappingOutsideOfPopup="False"
             >
    <Grid RowDefinitions="Auto,*,Auto,Auto"
          Margin="0"
          Padding="10"
          BackgroundColor="{StaticResource bgColorPage}"
          >
            <VerticalStackLayout Grid.Row="0" 
                                 Margin="0,0,0,20"
                                   
                                 >
                <Label Text="Motivo de no entrega "
                       TextColor="{StaticResource Gray600}"
                       FontAttributes="Bold"
                       FontSize="18"
                       HorizontalOptions="Center"
                       />
            <Label Text="{Binding CurrentCauseNonDeliveries.Name}"
                   TextColor="{StaticResource Gray500}"
                   FontAttributes="Bold"
                   FontSize="16"
                   LineBreakMode="CharacterWrap"
                   Margin="2,0,0,0"
                   />
            </VerticalStackLayout>
        

            <Border Grid.Row="1"
                    StrokeThickness="2"
                    StrokeShape="RoundRectangle 10"
                    Stroke="{StaticResource Primary}"
                    BackgroundColor="{StaticResource White}"
                    >
            <VerticalStackLayout Grid.Row="1"
                                 Margin="10,0,0,0"
                                 >
                <Label Text="Mensaje"
                       Margin="4,5,0,-6"
                       FontAttributes="Bold"
                       TextColor="{StaticResource Gray300}"
                       />
                
                <Editor  AutoSize="TextChanges"
                         VerticalOptions="Fill"
                         HorizontalOptions="Fill"
                         Margin="0,0,0,-8"
                         TextColor="{StaticResource Gray500}"
                         FontAttributes="Bold"
                         />
            </VerticalStackLayout>
            </Border>

            <HorizontalStackLayout Grid.Row="2" Margin="0,40,0,0"
                                   HorizontalOptions="Center"
                                   Spacing="30"
                                   VerticalOptions="End"
                                   >
                <Button Text="Cerrar"
                        BackgroundColor="{StaticResource Gray500}"
                        FontAttributes="Bold"
                        Command="{Binding ClosePopupCommand}"
                        />
                <Button Text="Guardar"
                        FontAttributes="Bold"
                        Command="{Binding SaveNonDeliveryCommand}"
                        />
            </HorizontalStackLayout>
    </Grid>
</toolkit:Popup>