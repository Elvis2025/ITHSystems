<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITHSystems.Controls.CameraCodeBarControlPage"
              xmlns:zxing="clr-namespace:ZXing.Net.Maui.Controls;assembly=ZXing.Net.MAUI.Controls"
             xmlns:zx="clr-namespace:ZXing.Net.Maui;assembly=ZXing.Net.MAUI"
             Title="CameraCodeBarControlPage">
    <Grid>
        <zxing:CameraBarcodeReaderView x:Name="BarcodeReader"
                                       BarcodesDetected="OnBarcodesDetected"
                                       IsDetecting="True"
                                       CameraLocation="Rear"
                                       HorizontalOptions="Fill"
                                       VerticalOptions="Fill">
            <zxing:CameraBarcodeReaderView.Options>
                <zx:BarcodeReaderOptions
                    Formats="Pdf417,Code39,Code128,Ean13,UpcA,QrCode"
                    AutoRotate="True"
                    TryHarder="True"
                    Multiple="False" />
            </zxing:CameraBarcodeReaderView.Options>
        </zxing:CameraBarcodeReaderView>

        <!-- Tu Entry para mostrar el resultado -->
        <Entry x:Name="CedulaEntry"
               Placeholder="000-0000000-0"
               Keyboard="Numeric"
               Margin="16"
               VerticalOptions="End" />
    </Grid>
</ContentPage>