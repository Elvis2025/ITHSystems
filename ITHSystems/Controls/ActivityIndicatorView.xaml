<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:ITHSystems.Resx"
             x:Class="ITHSystems.Controls.ActivityIndicatorView">
    <Grid
 HorizontalOptions="Fill"
 InputTransparent="False"
 VerticalOptions="Fill"
     BackgroundColor="#80000000"
     ZIndex="100"
     >

        <BoxView
     BackgroundColor="Transparent"
     VerticalOptions="Fill"
     HorizontalOptions="Fill"
     InputTransparent="False"/>
        <Frame
 BackgroundColor="Transparent"
 BorderColor="Transparent"
 CornerRadius="0"
 HorizontalOptions="Fill"
 InputTransparent="False"
 IsClippedToBounds="True"
 VerticalOptions="Fill" />
        <!--  Contenedor sin opacidad  -->
        <Border
     BackgroundColor="White"
     HeightRequest="130"
             InputTransparent="False"
     HorizontalOptions="Center"
     Stroke="{StaticResource White}"
     StrokeShape="RoundRectangle 32"
     VerticalOptions="Center"
     WidthRequest="130">
            <Grid
         HorizontalOptions="Center"
         RowDefinitions="Auto,Auto"
                 InputTransparent="False"
         VerticalOptions="Center">
                <ActivityIndicator
             Grid.Row="0"
             HeightRequest="100"
             IsRunning="True"
             WidthRequest="100"
             ZIndex="1"
             Color="{StaticResource Primary}" />
                <Image
             Grid.Row="0"
             Aspect="Fill"
             HeightRequest="92"
             HorizontalOptions="Center"
             Source="ibsisbusy.png"
             VerticalOptions="Center"
             WidthRequest="92" />

                <Label
             Grid.Row="1"
             FontSize="Caption"
             HorizontalOptions="Center"
             Text="{Static resources:IBSResources.Loading}"
             VerticalOptions="End" />

            </Grid>
        </Border>
    </Grid>
</ContentView>
