<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITHSystems.Controls.GradientHeader"
             x:Name="Root"
             xmlns:resources="clr-namespace:ITHSystems.Resx"
             xmlns:icon="clr-namespace:ITHSystems.UsesCases.IconFonts"
             >
    <Grid>
      
        <BoxView HeightRequest="140"
                 VerticalOptions="Start"
                 BackgroundColor="Transparent">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                    <GradientStop Color="#ECECEC" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <!--<Border HeightRequest="86"
                WidthRequest="95"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 20"
                Margin="0,-64,0,0"
                HorizontalOptions="Center"
                >
            <Image Source="ibsisbusy.png"
                   Aspect="AspectFit"
                   HeightRequest="120"
                   WidthRequest="120" 
                   />
        </Border>-->

        <Label Text="{Binding Title,Source={x:Reference Root}}" 
               HorizontalOptions="Center"
               Margin="0,0,0,0"
               VerticalTextAlignment="Center"
               VerticalOptions="Start"
               FontAttributes="Bold"
               FontSize="22"
               TextColor="{StaticResource White}"
                 />
        <Label VerticalOptions="Start"
                HorizontalOptions="Start"
                BackgroundColor="Transparent"
               Margin="20,5,0,0"
                Text="{Static icon:IconFont.ArrowLeft}"
               FontFamily="{Static icon:FontFamilyIcons.FaSolid}"
                FontSize="22"
               TextColor="{StaticResource White}"
                VerticalTextAlignment="Center"
                >
            <Label.GestureRecognizers>
                <TapGestureRecognizer Command="{Binding BackButtonCommand,Source={x:Reference Root}}"
                                      CommandParameter="{Binding BackButtonCommandParameter,Source={x:Reference Root}}"
                                      />
            </Label.GestureRecognizers>
        </Label>
    </Grid>
</ContentView>
