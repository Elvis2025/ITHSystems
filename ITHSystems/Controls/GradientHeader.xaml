<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ITHSystems.Controls.GradientHeader">
    <Grid RowDefinitions="Auto">
        <BoxView HeightRequest="150"
                 VerticalOptions="Start"
                 BackgroundColor="Transparent">
            <BoxView.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="{StaticResource Primary}" Offset="0.0" />
                    <GradientStop Color="#ECECEC" Offset="1.0" />
                </LinearGradientBrush>
            </BoxView.Background>
        </BoxView>

        <Border HeightRequest="86"
                WidthRequest="95"
                Stroke="Transparent"
                StrokeShape="RoundRectangle 20"
                Margin="0,-40,0,0"
                HorizontalOptions="Center">
            <Image Source="ibsisbusy.png"
                   Aspect="AspectFit"
                   HeightRequest="160"
                   WidthRequest="160" />
        </Border>
        <Label Text="iTH System Entregas" 
               VerticalOptions="End"
               HorizontalOptions="Center"
               Margin="0,-30,0,24"
               FontAttributes="Bold"
               FontSize="22"
               TextColor="{StaticResource Gray600}"
               />
    </Grid>
</ContentView>
