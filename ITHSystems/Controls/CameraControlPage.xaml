<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ITHSystems.Controls.CameraControlPage"
             Title="CameraControlPage">
    <VerticalStackLayout>
        <Image x:Name="Foto"
               HeightRequest="300"
               VerticalOptions="Fill"
               Aspect="AspectFill"/>

        <toolkit:CameraView x:Name="Cam"
                           VerticalOptions="Fill"
                           HeightRequest="600"
                           MediaCaptured="Cam_MediaCaptured" 
                           
                           />

        <Button Text="Tomar foto" Clicked="OnSnap"/>
    </VerticalStackLayout>
</ContentPage>