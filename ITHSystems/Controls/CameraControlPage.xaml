<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="ITHSystems.Controls.CameraControlPage"
             xmlns:icon="clr-namespace:ITHSystems.UsesCases.IconFonts"
             >
    <Grid RowDefinitions="*">

        <toolkit:CameraView x:Name="Cam"
                           VerticalOptions="Fill"
                           MediaCaptured="Cam_MediaCaptured" 
                           Grid.Row="0"
                           />
        <Image x:Name="Foto"
               HeightRequest="100"
               WidthRequest="76"
               VerticalOptions="End"
               HorizontalOptions="Start"
               Margin="20,0,0,10"
               BackgroundColor="{StaticResource Gray100}"
               Aspect="AspectFill">
            <Image.GestureRecognizers>
                <TapGestureRecognizer Tapped="ShowImage"/>
            </Image.GestureRecognizers>
        </Image>


        <Border VerticalOptions="End"
                HorizontalOptions="Center"
                Stroke="{StaticResource Primary}"
                StrokeShape="RoundRectangle 100"
                Padding="6"
                Margin="0,0,0,28"
                StrokeThickness="5"
            >
            

        <Button Margin="0,0,0,0" Clicked="OnSnap"
                CornerRadius="100"
                BackgroundColor="{StaticResource Gray200}"
                />
        </Border>
        
       

        <Button Margin="0,0,20,38"
                CornerRadius="100"
                BackgroundColor="Green"
                Text="Guardar"
                VerticalOptions="End"
                HorizontalOptions="End"
                FontAttributes="Bold"
                Clicked="SavePhoto"
                />
        <Button Text="{Static icon:IconFont.ArrowLeft}"
                FontFamily="{Static icon:FontFamilyIcons.FaSolid}"
                VerticalOptions="Start" 
                HorizontalOptions="Start"
                Margin="6,20,0,0"
                FontSize="22"
                Clicked="CancelPhoto"
                BackgroundColor="{StaticResource Black}"
        />
    </Grid>
</ContentPage>